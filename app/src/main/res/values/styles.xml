<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorgreen</item>
        <item name="colorPrimaryDark">@color/colorgreendark</item>
        <item name="colorAccent">@color/colorDark</item>
        <item name="android:fontFamily">@font/autour_one</item>
    </style>
    <style name="AppThemeDialogueBuy" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorgreen</item>
        <item name="colorPrimaryDark">@color/colorgreen</item>
        <item name="colorAccent">@color/colorDark</item>
    </style>


    <style name="AppThemeDialogue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorRose</item>
        <item name="colorPrimaryDark">@color/colorRose</item>
        <item name="colorAccent">@color/colorDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/autour_one</item>
    </style>


    <style name="tabStyle" parent="AppTheme.AppBarOverlay">
        <item name="colorControlNormal">@color/colorRose</item>
        <item name="searchViewStyle">@color/background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:fontFamily">@font/autour_one</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="titelStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:fontFamily">@font/autour_one</item>
    </style>

</resources>
