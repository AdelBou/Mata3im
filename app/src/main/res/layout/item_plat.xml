<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:paddingBottom="0dp"
    android:paddingTop="0dp"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagelistPlat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/barcelona_list"
            app:layout_constraintBottom_toTopOf="@+id/guideline3Plat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3Plat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="144dp" />

        <TextView
            android:id="@+id/namePlat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#66000000"
            android:fontFamily="@font/autour_one"
            android:gravity="left|center"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:paddingRight="40dp"
            android:text="TextView"
            android:textColor="#FFF"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4Plat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4Plat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="55dp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/price"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorRose"
            android:clickable="true"
            android:elevation="5dp"
            android:gravity="center"
            android:text="{fa-credit-card}"
            android:textColor="@color/background"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/buyPlat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/iconincardclick"
            android:clickable="true"
            android:gravity="center"
            android:text="{fa-credit-card}"
            android:textColor="@color/colorgreen"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/imagelistPlat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3Plat" />


        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/bookmark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/iconincardclick"
            android:clickable="true"
            android:gravity="center"
            android:text="{ion-star}"
            android:textColor="@color/colorRose"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/imagelistPlat"
            app:layout_constraintEnd_toStartOf="@+id/buyPlat"
            app:layout_constraintTop_toTopOf="@+id/guideline3Plat" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/addCart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/iconincardclick"
            android:clickable="true"
            android:gravity="center"
            android:text="{ion-ios-cart}"
            android:textColor="@color/colorRose"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3Plat"
            app:layout_constraintEnd_toStartOf="@+id/bookmark"
            app:layout_constraintTop_toTopOf="@+id/guideline3Plat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buyPlat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3Plat">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/dujour"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@drawable/badg_rose"
                android:gravity="center"
                android:padding="3dp"
                android:text="{ion-fireball}"
                android:textColor="@color/background"
                android:textSize="14sp" />
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/vegetarien"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/badg_green"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="{ion-leaf}"
                android:textColor="@color/background"
                android:textSize="14sp" />
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/diabetique"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/badg_rose"
                android:gravity="center"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:text="{fa-plus}"
                android:textColor="@color/background"
                android:textSize="14sp" />
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/binaire"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/badg_gray"
                android:gravity="center"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:text="2"
                android:textColor="@color/background"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

